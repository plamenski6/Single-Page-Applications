<!-- Details View (Become a donor) -->
<div class="container" style="margin-bottom: 2%; margin-top:5%;">
    <div class="row">
        <div class="modal-content col-lg-12">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title" id="myModalLabel">Make a donation</h4>
            </div>
            <div class="modal-body">
                <center>
                    <img style="border-radius: 5px;"
                        src="{{cause.pictureUrl}}" name="aboutme"
                        width="500" height="auto" border="0" class="img-circle">
                    <h3 class="media-heading">{{cause.cause}}</h3>
                    <span>Collected</span>
                    <strong class="label text-success">{{cause.collectedFunds}}</strong>
                    <span> from </span>
                    <strong class="label text-info">{{cause.neededFunds}}</strong>
                </center>
                <hr>
                <center>
                    <p style="word-wrap: break-word;" class="text-left"><strong>Description: </strong><br>
                        {{cause.description}}
                    </p>
                    <br>
                    <p style="word-wrap: break-word;" class="text-left"><strong>Donors:</strong><br>
                        {{#each cause.donors}}
                        <span>{{this}}</span>
                        {{/each}}
                    </p>
                </center>
            </div>
            <div class="modal-footer">
                {{#if isCreator}}
                <a href="#/delete/{{cause.id}}" class="btn btn-danger">Close the cause</a>
                {{else}}
                <form method="post" action="#/details/{{cause.id}}">
                    <label class="grey-text font-weight-light">My donation: </label>
                    <input name="currentDonation" type="number" min="1" class="form-control" />
                    <button style="width: 100%;" class="btn btn-success" type="submit">Make the donation</button>
                </form>
                {{/if}}
            </div>
        </div>
    </div>
</div>
