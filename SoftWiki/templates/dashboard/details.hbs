{{> header}}
<!-- Details -->
<div class="container details">
    <div class="details-content">
        <h2>{{art.title}}</h2>
        <strong>{{art.category}}</strong>
        <p>{{art.content}}</p>
        <div class="buttons">
            {{#if isCreator}}
            <a href="#/delete/{{art.id}}" class="btn delete">Delete</a>
            <a href="#/edit/{{art.id}}" class="btn edit">Edit</a>
            {{else}}
            <a href="#/home" class="btn edit">Back</a>
            {{/if}}
        </div>
    </div>
</div>
{{> footer}}